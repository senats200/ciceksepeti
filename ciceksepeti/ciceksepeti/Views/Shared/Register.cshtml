
@model RegisterViewModel
        <div class="container mt-5">
            <div class="card p-4 shadow-lg">
                <h3 class="text-center mb-4">Üye Ol</h3>
                <form asp-action="Register" method="post">
 
                    <!-- İsim Alanı -->
                    <div class="form-group mb-3">
                        <label for="UserName">Adınız Soyadınız</label>
                        <input type="text" id="UserName" name="UserName" class="form-control" required />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>

                    <!-- E-posta Alanı -->
                    <div class="form-group mb-3">
                        <label for="Email">E-posta</label>
                        <input type="email" id="Email" name="Email" class="form-control" required />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <!-- Şifre Alanı -->
                    <div class="form-group mb-3">
                        <label for="Password">Şifre</label>
                        <input type="password" id="Password" name="Password" class="form-control" required />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <!-- Şifre Doğrulama  Alanı -->
            <div class="form-group mb-3">
                <label for="ConfirmPassword">Şifreyi Doğrula</label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" required />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Role">Rol</label>
                <select class="form-control" id="Role" name="Role" required>
                    <option value="User">Kullanıcı</option>
                    <option value="Admin">Admin</option>
                </select>

       
                    <div class="form-group mb-3">
                    <div class="form-check">
                        <input type="checkbox" id="Terms" name="TermsAccepted" class="form-check-input" required />
                        <label for="Terms" class="form-check-label"> 
                            Çiçeksepeti.com tarafından tarafıma ticari elektronik ileti gönderilmesine izin veriyorum.
                        </label>
                    </div>
                    </div>


                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input type="checkbox" id="Terms" name="TermsAccepted" class="form-check-input" required />
                                <label for="Terms" class="form-check-label">
                                    Kişisel Verilerin İzlenmesi Ve Aktarımına Dair Aydınlatma Metni'ni okudum,anladım.

                                </label>
                                </div>
                   
                    </div>

                    <!-- Üye Ol Butonu -->
                 <button type="submit" style="background-color:#b5e8b9" value ="Register"class="btn  btn-block">Üye Ol</button>
            
                </form>
        <p class="text-center mt-3">
            Zaten hesabınız var mı? <a href="/Account/Login">Giriş Yapın.</a>
        </p>
            </div>
        </div>


       