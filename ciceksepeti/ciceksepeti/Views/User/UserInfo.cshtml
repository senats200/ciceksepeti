@model ciceksepeti.Models.UserInfo

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Üyelik Bilgilerim</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="UserInfo" asp-controller="User">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="Name">Adı Soyadı</label>
                            <input type="text" class="form-control" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Email">E-posta</label>
                            <input type="email" class="form-control" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Phone">Telefon</label>
                            <input type="text" class="form-control" asp-for="Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Address">Adres</label>
                            <textarea class="form-control" asp-for="Address" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn  btn-block" style="background-color:#b5e8b9">Kaydet</button>
                        </div>
                    </form>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" style="margin-top:10px">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<style>


/* Card düzeni */
.card {
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Card başlık stilini ayarlama */
.card-header {
    background-color: #f8f9fa;
    font-weight: bold;
}

/* Form alanlarının düzeni */
    .form-group input.form-control, .form-group textarea.form-control {
    border-radius: 5px;
    margin-bottom: 15px;
    padding: 10px;
    font-size: 14px;
}

/* Form butonunu düzenleme */
.btn-block {
    padding: 12px;
    font-size: 16px;
    font-weight: bold;
}

/* Formu ortalamak için */
.row.justify-content-center {
    display: flex;
    justify-content: center;
}


</style>