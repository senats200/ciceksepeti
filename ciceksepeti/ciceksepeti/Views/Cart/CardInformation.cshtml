@model ciceksepeti.Models.CardViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-content">
            <h2>ÇiçekSepeti</h2>

        </div>
    </nav>
    <div class="card-form">
        <form asp-action="SaveCardInformation" asp-controller="Cart" method="post">
            <div class="form-content">
                <!-- Sol Kısım (Kullanıcı Bilgileri) -->
                <div class="card-info">
                    <h2>Kredi Kartı/Banka Kartı</h2>
                    <label for="CardNumber">Kart Numarası</label>
                    <input type="text" id="CardNumber" asp-for="CardNumber" required>
                    <label for="ExpiryDate">Son Kullanma Tarihi</label>
                    <label for="Month">Ay</label>
                    <select id="Month" asp-for="Month" required>
                        <option value=""></option>
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>

                    <label for="Year">Yıl</label>
                    <select id="Year" asp-for="Year" required>
                        <option value=""></option>
                        @for (int i = DateTime.Now.Year; i <= DateTime.Now.Year + 10; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <label for="CVV">CVV </label>
                    <input type="text" id="cvv" asp-for="CVV" required>
                <div class="form-group mb-3">
                <div class="form-check">
                    <input type="checkbox" id="Terms" asp-for="TermsAccepted" class="form-check-input" required />
                    <label for="Terms" class="form-check-label">
                        Ön Bilgilendirme Formu ve Mesafeli Satış Sözleşmesini okudum ve kabul ediyorum.
                    </label>
                </div>
                </div>
                    

                </div>
                <div class="cart-summary">
                    <h3>Sepet Özeti</h3>
                        <p>Toplam Ürün Sayısı: <span>@ViewBag.TotalItems</span></p>
                        <p>Toplam Tutar: <span>@ViewBag.TotalAmount.ToString("C")</span></p>
                  </div>
             
             </div>
            <div class=" my-buttton-container">
               
                <button type="submit" class="my-submition-btn">Ödeme Yap</button>
            </div>


        </form>
    </div>

</body>
</html>
<style>

    body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .navbar {
        background-color: white;
        padding: 20px 0;
        text-align: center;
        position: fixed;
        width: 100%;
        top: 0;
        left: 0;
        z-index: 1000; /* NavBar'ı üstte tutar */
    }

        .navbar h2 {
            font-size: 30px;
            color: #0b075e;
            margin: 0;
        }


    .card-form {
        width: 70%;
        max-width: 900px;
        background-color: #fff;
        justify-content: center;
        align-items: center;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border: 1px solid #ddd;
        margin-top: 120px;
    }

        .card-form .form-content {
            display: flex;
            justify-content: space-between;
            gap: 20px;
        }

    .card-form .card-info,
    .card-form .card-summary {
        width: 48%;
     
    }

    .card-form h2 {
        font-size: 22px;
            color: #333;
        margin-bottom: 10px;
    }

    .card-form label {
        font-size: 14px;
        font-weight: bold;
        color: #555;
        margin-bottom: 5px;
    }


    .card-form button.my-submition-btn{
      width: 30%;
      padding: 15px;
      align-self:center;
      margin-left:600px;
      background-color: #b5e8b9;
      margin-bottom:20px;
      color: black;
      border: none;
      border-radius: 4px;
      font-size: 18px;
      cursor: pointer;
      transition: background-color 0.3s;
      

        }
    .my-button-container{
        display: flex;
        margin-bottom:20px;


    }


    .card-form .card-info select {
        margin-bottom:15px;
        height:50px;
        width:100px;
        padding:12px;
        border-radius:4px;
        border:1px solid #ddd;
        font-size:14px;
}

.card-form .card-content{
    display:flex;
    justify-content:space-between;
    gap:30px;
}

    .card-form .card-info,
    .card-form .card-summary {
        display: flex;
        flex-direction: column;
    }

    .card-form .card-info input  {
            margin-bottom:15px;
            height: 20px;
            width: 130px;
            padding: 12px;
            border-radius: 4px;
            border: 1px solid #ddd;
            font-size: 14px;
           
    }
    .cart-form .cart-summary {
        justify-content:flex-start;
        flex-direction:column;
    }
    
    .cart-summary h3 {
        font-size: 18px;
        color: #333;
    }

    .cart-summary p {
        font-size: 16px;
        margin: 5px 0;
    }

    .cart-summary span {
        font-weight: bold;
        color: #b5e8b9;
    }

    .card-form .form-check{
        display: flex;
        justify-content:flex-start;
        width:60%;
        align-items:center;
        flex-direction:row;
    }

        .card-form .form-check input {
            width: auto; 
            margin-right: 10px; 
            justify-content:flex-start;
        }

      
</style>
    